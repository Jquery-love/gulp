  <ion-content>
    <ion-refresher on-refresh="doRefresh()"></ion-refresher>
    <div class="rssList" ng-repeat="item in rssData">
      <div class="item item-thumbnail-left">
        <a class="item-img imgc" href="{{item.url}}"><img class="imge" src="{{item.imgUrl}}"></a>
        <a class="item-title">{{item.title}}</a>
        <p class="item-sec cf"><time class="l">{{item.time}}</time> <a class="r" href="{{item.stampUrl}}">评级邮票</a></p>
        <p class="item-sec">{{item.shopName}}</p>
        <p class="item-sec">&yen; <strong class="price">{{item.price}}</strong><a href="javascript:;" class="atten-btn"></a></p>
      </div>
    </div>
  </ion-content>
</ion-view>