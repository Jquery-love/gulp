<div class="bar bar-subheader rss-btns">
  <div class="button-bar">
    <a class="button" ng-class="{'now':type == '1'}" ng-click="showList(1)">
      预览<sup>8</sup>
    </a>
    <a class="button" ng-class="{'now':type == '2'}" ng-click="showList(2)">
      竞价<sup>8888</sup>
    </a>
    <a class="button" ng-class="{'now':type == '3'}" ng-click="showList(3)">
      定价<sup>8</sup>
    </a>
    <a class="button" ng-class="{'now':type == '4'}" ng-click="showList(4)">
      成交<sup>8</sup>
    </a>
  </div>
</div>
